import argparse
import subprocess
import colored
from colored import fg, bg, attr
import os


def main(mmodel, run=None):
    print(f'\n{fg(241)} Hello mmodel {fg(40)}[{mmodel}]{attr(0)}\n')
    if run is not None:

        subprocess.Popen(os.curdir+'/'+run+'.py')



if __name__ == "__main__":
    import argparse

    parser = argparse.ArgumentParser(description='A test program.')

    parser.add_argument("-m", "--mmodel", help="get mmodel.", type=str, default='project')
    parser.add_argument("-r", "--run", help="run", type=str)
    args = parser.parse_args()

    main(args.mmodel, run=args.run)
